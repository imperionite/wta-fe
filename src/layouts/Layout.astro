---
import AuthModal from "../components/AuthModal.astro";
const { title, description, currentPage, currentUrl } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href={`${import.meta.env.VITE_SITE_BASE}favicon.svg`}
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    {
      currentPage === "index" || currentUrl === "/" ? (
        <link
          rel="canonical"
          href={`https://gracielleee.github.io/WebSysTech_H3101_Group-15/`}
        />
      ) : (
        <link
          rel="canonical"
          href={`https://gracielleee.github.io/WebSysTech_H3101_Group-15/${currentPage}`}
        />
      )
    }
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href={`${import.meta.env.VITE_SITE_BASE}css/global.css`}
    />
    <link
      rel="stylesheet"
      href={`${import.meta.env.VITE_SITE_BASE}css/${currentPage}.css`}
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
  </head>
  <body>
    <slot name="header" />
    <slot />
    
    <AuthModal />

    <!-- Page modals (BookingModal) -->
    <slot name="modal" />

    <slot name="footer" />

    <!-- Scripts -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    ></script>
    <script>
      window.APP_CONFIG = {
        API_BASE: import.meta.env.PUBLIC_API_BASE,
      };
    </script>
    <script
      src="https://kit.fontawesome.com/62d08c9dc3.js"
      crossorigin="anonymous"
      is:inline></script>
    <script
      type="module"
      src={`${import.meta.env.VITE_SITE_BASE}js/auth.js`}
      is:inline></script>
    <script
      type="module"
      src={`${import.meta.env.VITE_SITE_BASE}js/bookingForm.js`}
      is:inline></script>
    <script
      type="module"
      src={`${import.meta.env.VITE_SITE_BASE}js/footer.js`}
      is:inline></script>
  </body>
</html>
